# CONFIGURAÇÃO DO SERVIDOR
PORT=3001
NODE_ENV=development

# CONFIGURAÇÃO DA BLOCKCHAIN
BLOCKCHAIN_RPC_URL=http://localhost:8545
ENERGY_GRID_CONTRACT_ADDRESS=0x...
PRIVATE_KEY_VAULT_URL=http://localhost:8200

# SEGURANÇA
